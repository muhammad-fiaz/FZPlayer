<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fzstream.GetUrlFromUser">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/streamurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            app:titleTextAppearance="@style/TitleBarTextAppearance"
            android:contentDescription="display the top bar"
            >


            <ImageView
                android:id="@+id/streamUrlpage_arrowbackbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrowbackbtn"
                android:contentDescription="BackButton" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Video Streams"
                android:fontFamily="@font/lato_regular"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:contentDescription="display the title bar"


                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bglauch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/videostream"
        android:contentDescription="display the background theme"

        >


        <ImageView
            android:id="@+id/stream_logo"
            android:layout_width="278dp"
            android:layout_height="211dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="436dp"
            android:src="@drawable/fzplayerlogo1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.543"
            tools:ignore="MissingConstraints,UnknownIdInLayout"
            tools:layout_editor_absoluteX="66dp"
            android:contentDescription= "app logo"

            >

        </ImageView>

        <Button
            android:id="@+id/play_stream_video"
            android:layout_width="304dp"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/url_stream"
            android:layout_alignEnd="@+id/url_stream"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="225dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Play Video"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/url_stream"
            app:layout_constraintVertical_bias="0.054"
            tools:ignore="MissingConstraints"
            android:contentDescription="display the play the video utton"
            />


        <TextView
            android:layout_width="244dp"
            android:layout_height="26dp"
            android:layout_above="@+id/url_stream"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="-2dp"
            android:text="Enter network address:e.g.https://"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:contentDescription="display the message"

            >


        </TextView>

        <EditText
            android:id="@+id/url_stream"
            android:layout_width="304dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="306dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Enter Url here"
            android:paddingLeft="16dp"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            tools:ignore="TextFields"
            android:contentDescription="enter the url here"

            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


